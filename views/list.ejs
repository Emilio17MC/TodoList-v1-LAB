<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>To Do List</title>
  </head>
  <body>
    <h1><%= day %></h1>

    <ul>
      <% listItems.forEach(element => { %>
      <li><%= element %></li>
      <% }); %>
    </ul>

    <form action="/" method="POST">
      <input type="text" name="newItem" autocomplete="off" />

      <button type="submit" name="button">Add</button>
    </form>
  </body>
</html>
