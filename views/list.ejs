<%- include("header"); -%>

  <div class="box" id="heading">
      <h1><%= listTitle %></h1>
    </div>

    <div class="box">
        <% listItems.forEach(element => { %>
        <div class="item">

          <input type="checkbox" />

          <p><%= element %></p>
        </div>
        <% }); %>

        <form action="/" method="POST">
          <input type="text" name="newItem" autocomplete="off" placeholder="New Item"/>
          <button type="submit" name="list" value=<%= listTitle %> >+</button>
        </form>
    </div>

    <%- include("footer"); -%>